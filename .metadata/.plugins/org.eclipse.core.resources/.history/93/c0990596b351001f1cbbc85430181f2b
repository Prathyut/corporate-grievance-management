        /* Change color on hover */
        .navbar a:hover {
            background-color: #ddd;
            color: black;
        }

        /* Hide the icon initially */
        .navbar a.icon {
            display: none;
        }

        /* Responsive styles */
        @media screen and (max-width: 600px) {
            .navbar a:not(:first-child) {display: none;}
            .navbar a.icon {
                float: right;
                display: block;
            }
        }

        .navbar.responsive {position: relative;}
        .navbar.responsive .icon {
